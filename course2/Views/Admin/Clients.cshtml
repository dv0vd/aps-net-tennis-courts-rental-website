
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <title>Клиенты</title>
</head>
<body>
    <center>
        <h1>Клиенты</h1>
        <table border="1" cellpadding="10" cellspacing="0">
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Имя
                </th>
                <th>
                    Фамилия
                </th>
                <th>
                    Телефон
                </th>
                <th>
                    Действия
                </th>
            </tr>
            @foreach (var c in ViewBag.Clients)
            {
                <tr>
                    <td>@c.Id</td>
                    <td>@c.Name</td>
                    <td>@c.Surname</td>
                    <td>@c.Phone</td>
                    <td>
                        <a href="/Admin/RemoveClient/@c.Id" onclick="return confirm('Действительно удалить?');">
                            Удалить
                        </a>
                    </td>
                </tr>
            }
        </table>
        <h3>Поиск</h3>
        <table>
            <tr>
                <td>
                    По имени, фамилии и номеру телефона
                </td>
                <td>
                    <form method="post" action="/Admin/SearchClientPhoneNameSurname">
                        <input type="text" name="Name" placeholder="ИМЯ" required>
                        <input type="text" name="Surname" placeholder="ФАМИЛИЯ" required>
                        <input type="text" name="Phone" placeholder="+7-XXX-XXX-XX-XX" required>
                        <input type="submit" value="Искать">
                    </form>
                </td>
            </tr>
            <tr>
                <td>
                    По имени и фамилии
                </td>
                <td>
                    <form method="post" action="/Admin/SearchClientNameSurname">
                        <input type="text" name="Name" placeholder="Имя" required>
                        <input type="text" name="Surname" placeholder="Фамилия" required>
                        <input type="submit" value="Искать">
                    </form>
                </td>
            </tr>
            <tr>
                <td>
                    По имени
                </td>
                <td>
                    <form method="post" action="/Admin/SearchClientName">
                        <input type="text" name="Name" placeholder="Имя" required>
                        <input type="submit" value="Искать">
                    </form>
                </td>
            </tr>
            <tr>
                <td>
                    По фамилии
                </td>
                <td>
                    <form method="post" action="/Admin/SearchClientSurname">
                        <input type="text" name="Surname" placeholder="Фамилия" required>
                        <input type="submit" value="Искать">
                    </form>
                </td>
            </tr>
            <tr>
                <td>
                    По номеру телефона
                </td>
                <td>
                    <form method="post" action="/Admin/SearchClientPhone">
                        <input type="text" name="Phone" placeholder="+7-XXX-XXX-XX-XX" required>
                        <input type="submit" value="Искать">
                    </form>
                </td>
            </tr>
        </table>
        <h1>
            <a href="/Admin/Index">На главную</a>
        </h1>
        <a href="/Admin/RemoveClients" onclick="return confirm('Действительно удалить?');">Удалить ВСЕХ клиентов</a>
    </center>
</body>
</html>
